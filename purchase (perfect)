<script>
window.dataLayer = window.dataLayer || [];
dataLayer.push({
 'event': 'purchase', //when a manual/perfect payment takes place
 'purchase_category': 'perfect', //when a manual/perfect payment takes place
 'currency': 'EUR', //currency code of the payment
 'transaction_id': '1234', //one of these formats: pi_3MPq2gKCFI2T2mwf1QxYl98u, AMB2022200421, adf7f00c-65af-4c17-a59f-e805eb273f51
 'affiliation': 'Amberscript-NL', //Amberscript-country code
 'value': 38.00, //total of purchase
 'tax': 6.60, //total tax in purchase (often 0 I think)
 
 'items': [{ //the products bought
   'item_id': '??_??_?', //there is no product_code for perfect/manual if I remember, but let's set a fixed item_id then
   'item_name': 'Perfect Netherlands Clean-read', //this is an example, curious to see which options are available
   'category': 'Perfect', //if it's perfect, automatic, or a (recurring) subscription
   'price': 0.18, //price per minute audio
   'quantity': 214 //total minutes
 }]
});
</script>
